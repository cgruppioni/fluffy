<div>
  <h3><%= @animal.name %></h3>
  <h4>Level: <%= @adoption.level %></h4>
  <h4>Points: <%= @adoption.score %></h4>
  <%= image_tag @animal.image.profile.url %><br>
  
  <%= form_tag [@adoption, :feedings] do %>
    <%= submit_tag "Feed #{@animal.name}" %>
  <% end %>

  <hr>
  <%= button_to "Abandon Pet", @adoption, method: :delete %>
</div>
