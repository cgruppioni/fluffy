<div class="large-3 large-centered columns"><h3><%= @animal.name %></h3></div>
<div class="large-8 large-offset-2 columns"><h4>Level: <%= @adoption.level %></h4></div>
<h4>Points: <%= @adoption.score %></h4>
<div class="large-3 large-centered columns"><%= image_tag @animal.image.profile.url %><br></div>

<%= form_tag [@adoption, :feedings] do %>
  <%= submit_tag "Feed #{@animal.name}" %>
<% end %>

<hr>
<%= button_to "Abandon Pet", @adoption, method: :delete %>
