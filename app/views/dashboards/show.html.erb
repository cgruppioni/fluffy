<% if @user.caregiver? %>
  <h3>Hello <%= @user.name.capitalize %></h3>
<% elsif @user.shelter? %>
  <%= link_to "Update Profile", [:edit, @user] %>
  <%= link_to "Create animal listing", [:new, current_user, :animal] %>
  <%= link_to "View my animal listings", [current_user, :animals] %>
<% end %>

<div>
  <h4>Enter your address, and browse adoptable pets near you!</h4>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query %>
    <%= submit_tag "Search" %>
  <% end %>
</div>
