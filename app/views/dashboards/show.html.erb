<% if current_user.caregiver? %>
  <h2>Hello <%= current_user.name.capitalize %>.</h2>
  
  <% if current_user.adoption %>
    <%= link_to "How is #{@animal.name} doing?",  @adoption %>
    <h4>Current Credits: <%= current_user.credits %></h4>
    <%= render "stripe_form" %>
  <% else %>
  <div>
    <h4>Enter your address, and browse adoptable pets near you!</h4>
    <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :query %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>
  <% end %>

<% elsif current_user.shelter? %>
  <%= link_to "Update Profile", [:edit, current_user] %>
  <%= link_to "Create animal listing", [:new, current_user, :animal] %>
  <%= link_to "View my animal listings", :animals %>
  <%= link_to "View adoptions", :adoptions %>
<% end %>

