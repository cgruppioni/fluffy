<%= form_for @user do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :role, "I am a.." %>
    <%= form.collection_select :role, User::ROLES, :to_s, :to_s, include_blanks: true %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
